{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "module": "esnext",
    "checkJs": true,
    "declaration": true,
    "outDir": "./build"
  },
  "include": [
    "src"
  ]
}
